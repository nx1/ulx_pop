f(above):
    above       = [1,1,1,1,1,1,1,1]
    transient   = [0,0,0,0,0,0,0,0]

    above       = [0,0,0,0,0,0,0,0]
    transient   = [0,0,0,0,0,0,0,0]

    above       = [0,0,0,1,0,1,0,1]
    transient   = [0,0,0,1,1,1,1,1]

    above       = [1,1,1,0,0,0,0,0]
    transient   = [0,0,0,1,1,1,1,1]


f(above):
    transient = [0] * 7
    last = above[0]

    for i in above[1:]:
        if last != current:
            transient[i:] = 1
            break

    return transient


